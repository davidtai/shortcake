#!/usr/bin/env node
// Wrapper around cake which shuffles the task to the end.

var path = require('path');

// If first argument to cake looks like a task, move it to end of arguments so
// cake agrees.
if (process.argv[2] && process.argv[2].charAt(0) !== '-')
  process.argv.push(process.argv.splice(2, 1)[0])

var cakeModule = 'coffee-script/lib/coffee-script/cake';

try {
    require.resolve(cakeModule);
} catch (err) {
    cakeModule = path.join('/usr/local/lib/node_modules', cakeModule)
}

try {
    require.resolve(cakeModule);
} catch (err) {
    cakeModule = cakeModule.replace('/usr/local/lib', '/usr/lib')
}

try {
    require(cakeModule).run();
} catch (err) {
  if (/Cakefile not found in/.test(err.message))
    console.log(err.message)
  else
    throw err
}

// vim: ft=javascript:
